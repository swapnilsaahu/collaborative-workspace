generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            Int             @id @default(autoincrement())
    email         String          @unique
    name          String
    password      String
    createdAt     DateTime        @default(now()) @map("created_at")
    updatedAt     DateTime        @updatedAt @map("updated_at")
    whiteboards   Whiteboard[]
    refreshTokens RefreshTokens[]

    @@map("user")
}

model RefreshTokens {
    id         Int     @id @default(autoincrement())
    jti        String  @unique
    user       User    @relation(fields: [userId], references: [id])
    userId     Int     @unique
    deviceInfo String?
    expiresAt  BigInt
    issuedAt   BigInt
    ipAddress  String?
    revoked    Boolean @default(false)

    @@map("refresh_tokens")
}

model Whiteboard {
    id          Int      @id @default(autoincrement())
    name        String
    coordinates Json
    users       User[]
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @updatedAt @map("updated_at")
    url         String   @unique

    @@map("whiteboard")
}
